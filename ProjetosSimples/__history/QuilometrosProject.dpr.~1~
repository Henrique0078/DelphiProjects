program QuilometrosProject;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var
entrada: string;
a,b,c: Single;

//Escreva um programa para converter velocidades de quilômetros por hora
//em metros por segundo e vice-versa.
function kmTom(km: single): single;
var
m: single;
begin
  m:= km * 1000;
  Result:= m;
end;

function mTokm(m: single): single;
var
km: single;
begin
  km:= m / 1000;
  Result:= km;
end;

begin
  try
    Writeln('Bem vindo!');
    Writeln('Voce deseja fazer a conversão de metro para quilometros, ou quilometros para metros?');
    Writeln('[1] Metros para quilometros');
    Writeln('[2] Quilometros para metros');
    Readln(Input, entrada);
    if entrada = '1' then
    begin
      Writeln('Informe o valor em metros: ');
      Readln(Input, a);
      b:= mTokm(a);
      b:= FloatToStr(b);
      Writeln(a.ToString + ' metros é equivalente a ' + mTokm(a) + ' quilometros');
    end;

    readln;
  except
    on E: Exception do
      Writeln(E.ClassName, ': ', E.Message);
  end;
end.
